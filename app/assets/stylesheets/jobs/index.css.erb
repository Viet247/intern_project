* {
    box-sizing: border-box;
  }

body { 
  margin: 0;
  font-family: Arial, Helvetica, sans-serif;
}

  /* css for search box */
.content__search .search__field{
  padding: 10px;
  font-size: 17px;
  border: 1px solid grey;
  float: left;
  width: 80%;
  background: #f1f1f1;
}

.button {
  float: left;
  width: 20%;
  padding: 10px;
  background: #2196F3;
  color: white;
  font-size: 17px;
  border: 1px solid grey;
  border-left: none;
  cursor: pointer;
}

.button:hover {
  background: #0b7dda;
}

.content__search::after {
  content: "";
  clear: both;
  display: table;
}

#container {
  display: grid;
  grid-template-columns: 200px 200px 200px;
  grid-template-rows: 100px 100px;
}

.banner_image {
  background-image: url(<%= asset_path 'ban.jpg' %>);
  background-position: right center;
  background-repeat: no-repeat;
  background-size: cover;
  height: 280px; 
}

.banner_image > h1{
  text-align: center;
  color: #181616
}

.margin__top{
    margin-top: 200px;
  }
  