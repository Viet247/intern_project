* {
    box-sizing: border-box;
  }

body { 
  margin: 0;
  font-family: Arial, Helvetica, sans-serif;
}

  /* css for search box */
.content__search .search__field{
  padding: 10px;
  font-size: 17px;
  border: 1px solid grey;
  float: left;
  width: 80%;
  background: #f1f1f1;
}

.button {
  float: left;
  width: 20%;
  padding: 10px;
  background: #2196F3;
  color: white;
  font-size: 17px;
  border: 1px solid grey;
  border-left: none;
  cursor: pointer;
}

.button:hover {
  background: #0b7dda;
}

.content__search{
  width: 500px;
  margin: 0 auto;
}

.content__search::after {
  content: "";
  clear: both;
  display: table;
}

.container {
  display: grid;
  grid-template-columns: 500px 500px 500px;
  grid-template-rows: 100px 100px;
}



.latest-jobs-detail{
  border: 1px solid;
  padding: 20px;
  margin: 0 auto;
  width: 975px;
}

.subject {
  margin: 30px 7px;
}


