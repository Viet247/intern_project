

<h2 class="page-header text-center">Change your password</h2>
<div class="row">
<div class="mx-auto col-10 col-md-8 col-lg-6">
<div class = "card p-3 border border-primary">
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <div class ="form-inputs__field">
    <%= f.input :password,
                required: true,
                autofocus: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password", class: "form-control" } %>
    </div>
    <div class ="form-inputs__field">
    <%= f.input :password_confirmation,
                label: "Confirm your new password",
                required: true,
                input_html: { autocomplete: "new-password", class: "form-control" } %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Change my password", class: "btn btn-primary" %>
  </div>
<% end %>

</div>
</div>
</div>
