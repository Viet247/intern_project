<h2>Sign up</h2>
<%= simple_form_for(resource, as: resource_name, url: register_2_path, data: {turbo: false}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }%>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Confirm your email" %>
  </div>
<% end %>

<%= render "users/shared/links" %>

