<h2 class="page-header text-center">Sign up</h2>
<div class="row">
<div class="mx-auto col-10 col-md-8 col-lg-6">
<div class = "card p-3 border border-primary">
<%= simple_form_for(resource, as: resource_name, url: register_2_path, data: {turbo: false}) do |f| %>
  <%= f.error_notification %>

   <div class="form-group ">
      <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: "form-control" } %>
    </div> 

  <div class="form-actions">
    <%= f.button :submit, "Confirm your email", class: "btn btn-primary" %>
  </div>
<% end %>
</div>
</div>
</div>

