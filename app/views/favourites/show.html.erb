<div class="mb-3 col-12 col-md-9 col-lg-9 mx-auto">
  <h3 class="mt-3 mb-2"><i class="fa-solid fa-heart" style="color: #dc3545;"></i> FAVORITE JOBS</h3>
  <%= form_tag favourite_apply_path, method: :post do %>
    <% @favourite_jobs.each do |job|%>
      <div class="card mb-3 shadow-sm">
        <div class="row">
          <div class="col-2 col-md-1 col-lg-1 p-3" >
            <input type="radio" name ="apply" value="<%= job.id %>" class="form-check-input ms-5 position-absolute top-50 start-0 translate-middle-y">
          </div>
          <div class="col-9">
            <div class="card-body">
              <h5 class="card-title fw-bold">
                <%= link_to job.name, job_path(job.id), class: 'text-decoration-none text-success' %>
              </h5>
              <h6 class="card-text"><%= job.description.slice(0,250) %></h6>
              <p class="float-end"><small><i class="fa-solid fa-sack-dollar me-2"></i><%= job.salary %></small></p>
              <small><i class="fa-solid fa-location-dot me-2"></i><%= job.city.name %></small>
            </div>
          </div>
          <div class="col-1">
            <%= link_to 'Remove', favourite_destroy_path(job_id: job.id) , data: {turbo_method: 'delete', turbo_confirm: 'Are you sure?'}, class: 'float-end me-3 position-absolute top-50 end-0 translate-middle-y btn btn-danger' %>
          </div>
        </div>
      </div>
    <% end %>
    <%= submit_tag 'Apply', class: 'btn btn-success' %>
  <% end %>
</div>