
<div class="page-header text-center heading__page">
  <h1>Applied jobs</h1>      
</div>   
<div data-controller="flatpickr">

<%# bootstrap for form %>
<div class="row">
<div class="mx-auto col-10 col-md-8 col-lg-6">
<div class = "card p-3 border border-primary">
  <%= search_form_for @q, url: applied_jobs_path do |f| %>
    <div class = "form-group">
      <%= f.search_field :email_cont, class: "form-control form-email", placeholder: "Please enter your email" %> <br />
    </div>
    <div class = "form-group">
      <%= f.select :city_id_eq, options_for_select(@cities, @q.city_id_eq), { include_blank: 'Select City' }, class: "form-select form-control" %>
    </div>
    <div class = "form-group">
      <%= f.select :industry_id_eq, options_for_select(@industries, @q.industry_id_eq), { include_blank: 'Select Industry' }, class: "form-select form-control" %> 
    </div>
    <div class = "form__time">
    <%= f.search_field :created_at_gteq, class: "from-date form-control form__time-ele", placeholder:"from date" %>
    <%= f.search_field :created_at_lteq, class: "to-date form-control form__time-ele", placeholder:"to date" %>
    </div>
    <div class = "btn__admin">
    <%= f.submit class: "btn btn-primary"%>
    <%= link_to "Export", applied_jobs_down_load_path(format: :csv, job_apply_ids: @applies.map(&:id)), class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
</div>
</div>

<%= paginate @applies %>

<% if @applies.present? %>
<% @applies.each do |applied| %>
<div class="results__detail-infor border border-secondary rounded">
      <b class = "badge badge-info font-weight-bold">Job title:</b> <a href=""><%= link_to applied.job.name, job_path(applied.job_id)%></a> <br />
      <b class = "badge badge-info">Candidates Name:</b> <a href=""><%= link_to applied.full_name, my_path(id: applied.user_id) %></a> <br />
      <b class = "badge badge-info">Candidates CV:</b> <%= applied.user.curriculum_vitate.file.filename %> <br />
      <b class = "badge badge-info">Candidates Email:</b><%= applied.email %>
      <b class = "results__details-salary"><%= applied.created_at %></b>
</div>   
  <% end %>
      <% else %>
        <div class="alert alert-info" role="alert">
         No results found !
        </div>
      <% end %> 
           