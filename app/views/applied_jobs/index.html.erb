
<div class="page-header text-center">
  <h1>Applied jobs</h1>      
</div>   
<div data-controller="flatpickr">

<%# bootstrap for form %>
<div class="row">
<div class="mx-auto col-10 col-md-8 col-lg-6">
<div class = "card p-3">
  <%= search_form_for @q, url: applied_jobs_path do |f| %>
    <div class = "form-group">
      <%= f.label :email %>
      <%= f.search_field :email_cont, class: "form-control" %> <br />
    </div>
    <div class = "form-group">
      <%= f.select :city_id_eq, options_for_select(@cities, @q.city_id_eq), { include_blank: 'Select City' }, class: "form-select" %>
    </div>
    <div class = "form-group">
      <%= f.select :industry_id_eq, options_for_select(@industries, @q.industry_id_eq), { include_blank: 'Select Industry' }, class: "form-select" %> 
    </div>
    <%= f.search_field :created_at_gteq, class: "from-date" %>
    <%= f.search_field :created_at_lteq, class: "to-date" %>
    <%= f.submit %>
  <% end %>
</div>
</div>
</div>




<%= link_to "Export", applied_jobs_path(format: 'csv', format: :csv, q: @current_search_params) %>
      <% if @applies.present? %>
        <% @applies.each do |applied| %>
        
                <span >Job Tilte:</span>
                  <a href=""><%= link_to applied.job.name, my_path(id: applied.user_id) %>
                    </a>
                </h3>
                <br />
                <span >Candidates Name:</span>
                
                 <a href=""><%= link_to applied.full_name, my_path(id: applied.user_id) %>
                    </a>
                <br />
                
                
                 <span >Candidates CV:</span> <%= applied.cv %> <br />
                 
                
                       <span >Candidates Email:</span>
                       
                        <%= applied.email %>
                        
                   
                  </div>
                  
                    <p>
                      <%= applied.created_at %>>
                    </p>
              
        <% end %>
      <% else %>
        <div class="alert alert-info" role="alert">
         No results found !
        </div>
      <% end %>

 </div>