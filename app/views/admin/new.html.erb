<h2 class="page-header text-center">Log in</h2>
<div class="row">
<div class="mx-auto col-10 col-md-8 col-lg-6">
<div class = "card p-3 border border-primary">
<%= simple_form_for(User.new, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <div class="form-group ">
      <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: "form-control" } %>
    </div>            
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class: "form-control" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "btn btn-primary" %>
  </div>
<% end %>
</div>
</div>
</div>



